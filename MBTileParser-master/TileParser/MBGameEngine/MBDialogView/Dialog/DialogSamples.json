/* More Flexible - Use an array instead of yes/no, allows for dynamic response count */

"Tree" : {
	"Dialog" : {
		"Text" : "Are you sure?",	
		"Responses" : {
			{
				"Text" : "Sure",
				"Action" : MyAffirmativeActionIdentifier,
				"Payload" : {}
			},
			
			{
				"Text" : "No",
				"Action" : MyActionIdentifier,
				"Payload" : {}			
			}
		
		}
	}	
}

/* Improved - Eliminate extra wrapper object */

"DialogTree" : {
	"Text" : "Are you sure?",	
	"Responses" : {
		{
			"Text" : "Sure",
			"Action" : MyAffirmativeActionIdentifier,
			"Payload" : {}
		},
		
		{
			"Text" : "No",
			"Action" : MyActionIdentifier,
			"Payload" : {}			
		}
	}
}

